<!doctype html>
<html lang="en" ng-app="galaxy">
    <head>
        <meta charset="UTF-8">
        <title>Fliper 1</title>
    {% block javascript %}
        <script type="text/javascript" src="{{ asset ( 'bundles/galaxyfrontend/js/angular.min.js' )  }}"></script>
        <script type="text/javascript" src="{{ asset ( 'bundles/galaxyfrontend/js/jquery-1.9.1.min.js' )  }}"></script>
        <script type="text/javascript" src="{{ asset ( 'bundles/galaxyfrontend/js/script.js' )  }}"></script>
        <script type="text/javascript" src="{{ asset ( 'bundles/galaxyfrontend/js/jquery.colorbox.js' )  }}"></script>
        <script type="text/javascript" src="{{ asset ( 'bundles/galaxyfrontend/js/colorBoxScript.js' )  }}"></script>
        <script type="text/javascript" src="{{ asset ( 'bundles/galaxyfrontend/js/angular-slider.js' )  }}"></script>
        <script type="text/javascript" src="{{ asset ( 'bundles/galaxyfrontend/js/jquery-ui-1.10.3.custom.min.js' )  }}"></script>
        <script type="text/javascript" src="{{ asset ( 'bundles/galaxyfrontend/js/js_script.js' )  }}"></script>
    {% endblock %}
    {% block css %}
        <link rel="stylesheet" href="{{ asset ( 'bundles/galaxyfrontend/css/angular-slider.css' ) }}"/>
        <link rel="stylesheet" href="{{ asset ( 'bundles/galaxyfrontend/css/jquery-ui-1.10.3.custom.css' ) }}"/>
        <link rel="stylesheet" href="{{ asset ( 'bundles/galaxyfrontend/css/style.css' ) }}"/>
    {% endblock %}
    </head>
    {% verbatim %}
<body class="" ng-controller="FlipperCtrl">
    <div id="disableActions" style="position:absolute; width:100%; height:100%; z-index:3; display: none"> </div>
	<div class="fliper"><!-- fliper -->
		<header><!-- header -->
			<div class="header-content">
				<a href="#" class="logo"></a>
				<a href="#" class="logout"></a>
				<div class="user-name">
					{{ user.username}}: <span>{{user.id}}</span>
				</div>
				<div class="clear"></div>
			</div>
		</header><!-- .header -->
		<section class="info-panel"><!-- info-panel -->
                    
                <div class="lives-count-container"><!-- lives-count-container -->
                    <i ng-repeat="i in [] | range:5" class="live-icon"
                             ng-class="i <= user.gameInfo.flipper.id && 'active' || ''"></i>
                    <div class="glass"></div>
                    <div class="counters">
                        <div class="line"></div>
                        <div class="line"></div>
                        <div class="line"><i></i></div>
                        <i class="distance-icon">
                            <span ng-model="maxJump">{{ user.gameInfo.flipper.maxJump }}</span>
                        </i>
                        <i class="price-icon">
                            <span>{{ user.gameInfo.flipper.rentCost}}</span>
                        </i>
                    </div>
                </div><!-- .lives-count-container -->
                <div class="mark"><!-- mark -->
                    <i class="mark-1"><i></i></i>
                    <span>{{ user.gameInfo.superJumps }}</span>
                </div><!-- .mark -->
                <div class="mark"><!-- mark -->
                    <i class="mark-2"><i></i></i>
                    <span>{{ user.gameInfo.countMessages }}</span>
                </div><!-- .mark -->
                <div class="mark price"><!-- mark -->
                    <i class="mark-3">
                        <span></span>
                        <i></i>
                    </i>
                    <span id="active" active="{{ user.fundsInfo.active }}" >{{ user.fundsInfo.active }}</span>
                    <div class="price-slider" id="price-slider">
                        <div id="sliderActive"></div>
                    </div>
                    <span class="transfer-count" id="transActive" style="{{0 < user.fundsInfo.transActive ? 'display: inline; left: 131px;' : ''}}" transActive="{{ user.fundsInfo.transActive }}" transValue="0">+{{ user.fundsInfo.transActive }}</span>
                 </div><!-- .mark -->
                <div class="mark bank"><!-- mark -->
                    <i class="mark-4"><i></i></i>
                    <span id="safe" safe="{{ user.fundsInfo.safe }}">{{ user.fundsInfo.safe }}</span>
                     <div class="price-slider" id="bank-slider">
                        <div id="sliderSafe"></div>
                    </div>
                    <span class="transfer-count" id="transSafe" style="{{0 < user.fundsInfo.transSafe ? 'display: inline; left: 131px;' : ''}}" transSafe="{{ user.fundsInfo.transSafe }}" transValue="0">+{{ user.fundsInfo.transSafe }}</span>
                </div><!-- .mark -->
                <div class="mark"><!-- mark -->
                    <i class="mark-5"><i></i></i>
                    <span >{{ user.fundsInfo.deposite }}</span>
                </div><!-- .mark -->
                <div class="mark-line" style="display: none"><!-- mark-line -->
                    <div class="mark"><!-- mark -->
                        <i class="mark-6">
                            <span>256</span>
                        </i>
                    </div><!-- .mark -->
                    <div class="mark"><!-- mark -->
                        <i class="mark-7">
                            <span>{{ user.gameInfo.countRentJumps }}</span>
                        </i>
                    </div><!-- .mark -->
                    <div class="mark"><!-- mark -->
                        <i class="mark-8">
                            <span>10</span>
                        </i>
                    </div><!-- .mark -->
                    <div class="mark"><!-- mark -->
                        <i class="mark-9">
                            <span>20</span>
                        </i>
                    </div><!-- .mark -->
                    <div class="mark"><!-- mark -->
                        <i class="mark-10">
                            <span>3</span>
                        </i>
                    </div><!-- .mark -->
                </div><!-- .mark-line -->
            </section><!-- .info-panel -->
		<section class="prizes-carusel"><!-- prizes-carusel -->
			<div class="shop-block-1">
                             {% endverbatim %}
                             {% for flipper in flippers %}
				<div class="shop-item"><!-- shop-item -->
					<div class="lives-count-container"><!-- lives-count-container -->
						<i ng-repeat="i in [] | range:5" class="live-icon"
                                 ng-class="i <= {{ flipper.id }} && 'active' || ''"></i>
						<div class="glass">
							<span>{{ flipper.rentDuration }}</span>
						</div>
						<div class="counters">
							<div class="line"></div>
							<div class="line"></div>
							<div class="line"></div>
							<i class="distance-icon">
								<span>{{ flipper.maxJump }}</span>
							</i>
							<i class="price-icon">
								<span>{{ flipper.costJump }}</span>
							</i>
						</div>
					</div><!-- .lives-count-container -->
					<div class="num-fl">
						<span>{{ flipper.rentCost }}</span>
					</div>
					<input type="submit"  ng-click="buyFlipper({{flipper.id}})" value="">
				</div>
                                {% endfor %}
                                
				
				<div class="shop-item shop-item-r shop-item-c-top">
					<i class="icon-p1"><i class="line"></i></i>
					<div class="num-fl">
						<span>#</span>
					</div>
                                            <input type="submit" class="star" value="">
				</div>
				<div class="shop-item shop-item-r">
					<i class="icon-p2"><i class="line"></i></i>
					<div class="num-fl">
						<span>{{ messageType.messCountCost }}</span>
					</div>
					<input type="submit" ng-click="buyMessageCount()" class="star" value="">
				</div>
				<div class="shop-item shop-item-r">
					<i class="icon-p2"><i class="line"></i></i>
					<div class="num-fl">
						<span>{{ messageType.messCost }}</span>
					</div>
                                            <input onclick="window.location='/store/new_message'" type="submit" value="">
				</div>
				<div class="clear"></div>
			</div>
                        {% verbatim %}
			<div class="shop-block-2">
				<div class="shop-item">
					<div class="mark"><!-- mark -->
						<i class="mark-11"><span>#</span></i>
						<i class="line"></i>
					</div><!-- .mark -->
					<div class="num-fl">
						<a href="#" class="count-min"></a>
						<a href="#" class="counter-plus"></a>
						<span>#</span>
					</div>
					<input type="submit" value="">
				</div>
				<div class="shop-item">
					<div class="mark"><!-- mark -->
						<i class="mark-6"><span>#</span></i>
						<i class="line"></i>
					</div><!-- .mark -->
					<div class="num-fl">
						<a href="#" class="count-min"></a>
						<a href="#" class="counter-plus"></a>
						<span>#</span>
					</div>
					<input type="submit" value="">
				</div>
				<div class="shop-item">
					<div class="mark"><!-- mark -->
						<i class="mark-7"><span>#</span></i>
						<i class="line"></i>
					</div><!-- .mark -->
					<div class="num-fl">
						<a href="#" class="count-min"></a>
						<a href="#" class="counter-plus"></a>
						<span>#</span>
					</div>
					<input type="submit" value="">
				</div>
				<div class="shop-item" >
					<div class="mark"><!-- mark -->
						<i class="mark-8"><span>#</span></i>
						<i class="line"></i>
					</div><!-- .mark -->
					<div class="num-fl">
						<a href="#" class="count-min"></a>
						<a href="#" class="counter-plus"></a>
						<span>#</span>
					</div>
					<input type="submit" value="">
				</div>
				<div class="shop-item" >
					<div class="mark"><!-- mark -->
						<i class="mark-9"><span>#</span></i>
						<i class="line"></i>
					</div><!-- .mark -->
					<div class="num-fl">
						<a href="#" class="count-min"></a>
						<a href="#" class="counter-plus"></a>
						<span>#</span>
					</div>
					<input type="submit" value="">
				</div>
				<div class="shop-item" >
					<div class="mark"><!-- mark -->
						<i class="mark-10"><span>#</span></i>
						<i class="line"></i>
					</div><!-- .mark -->
					<div class="num-fl">
						<a href="#" class="count-min"></a>
						<a href="#" class="counter-plus"></a>
						<span>#</span>
					</div>
					<input type="submit" value="">
				</div>
                                <div class="shop-item total-f" >
					<div class="total">
						<span>{{(costDeposite /  user.fundsInfo.rates.3).toFixed(0)}}</span>
						<i class="line"></i>
					</div>
					<i class="icon-price"><i class="line"></i></i>
					<div class="num-fl">
						<span ng-model="costDeposite">{{costDeposite}}</span>
					</div>
					<input type="submit" ng-click="depositeToActive()" value="">
				</div>
				<div class="shop-item" >
					<div class="total">
						<span>#</span>
						<i class="line"></i>
					</div>
					<i class="icon-star"><i class="line"></i></i>
					<div class="num-fl">
						<a href="#" class="count-min"></a>
						<a href="#" class="counter-plus"></a>
						<span>#</span>
					</div>
					<input type="submit" value="" class="rub">
				</div>
			</div>
			<div class="clear"></div>
		</section><!-- .prizes-carusel -->
		<section class="full-panel">
			<a href="#" class="c-icon-1 c-icon"></a>
			<a href="#" class="c-icon-2 c-icon"></a>
			<a href="#" class="c-icon-3 c-icon"></a>
			<a href="#" class="c-icon-4 c-icon"></a>
			<a href="/flipper" class="c-icon-5 c-icon"></a>
                        <a href="#" id="show-helps" class="c-icon-6 c-icon"></a>
                        <a href="/user_basket" class="c-icon-7 c-icon"></a>
			<a href="#" class="c-icon-8 c-icon"></a>
			<a href="#" class="c-icon-9 c-icon"></a>
			<a href="#" class="c-icon-10 c-icon"></a>
			<a href="#" class="c-icon-11 c-icon"></a>
		</section>
	</div><!-- .fliper -->
</body>     
<div style="display: none">
<br>
      <ul style="height: 200px">
        <p>Active: {{user.fundsInfo.active - costActive}}</p>
        <p>Safe: {{user.fundsInfo.safe + costActive * 1}}</p> 
        <slider floor="{{ floor }}" style="width: 30%" ceiling="{{user.fundsInfo.active}}" step="{{1}}" precision="2" ng-model="costActive"   class="ng-isolate-scope ng-scope ng-pristine ng-valid"></slider>
        <input type="text" 
               ng-model="costActive" 
               ng-change="toDeposite({{costActive}}, {{user.fundsInfo.active}})"
               type="number" name="" id=""
               min="{{0}}"
               max="{{user.fundsInfo.active}}"
               data-integer-input=""
                                          />
       <br />
       <button type="submit" ng-click="activeToSafe()" class="btn btn-primary">С Активного на безопасный</button>
     </ul>
     <ul style="height: 200px">
        <p>Safe: {{user.fundsInfo.safe - costSafe}}</p>
        <p>Active: {{user.fundsInfo.active + costSafe * 1}}</p> 
        <slider floor="{{ floor }}" style="width: 30%" ceiling="{{user.fundsInfo.safe}}" step="{{1}}" precision="2" ng-model="costSafe"   class="ng-isolate-scope ng-scope ng-pristine ng-valid"></slider>
        <input type="text" 
               ng-model="costSafe" 
               ng-change="toDeposite({{costSafe}}, {{user.fundsInfo.safe}})"
               type="number" name="" id=""
               min="{{0}}"
               max="{{user.fundsInfo.safe}}"
               data-integer-input=""
                                          />
       <br />
       <button type="submit" ng-click="safeToActive()" class="btn btn-primary">С безопасного на активный</button>
     </ul>
</div>
{% endverbatim %}

        </body>
</html>